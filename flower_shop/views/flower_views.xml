<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_flower_shop" model="ir.actions.act_window">
        <field name="name">Flowers</field>
        <field name="res_model">flower.shop</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- List (Tree) View -->
    <record id="view_flower_shop_tree" model="ir.ui.view">
        <field name="name">flower.shop.tree</field>
        <field name="model">flower.shop</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="scientific_name"/>
                <field name="season_start"/>
                <field name="season_end"/>
                <field name="watering_frequency"/>
                <field name="watering_amount"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_flower_shop_form" model="ir.ui.view">
        <field name="name">flower.shop.form</field>
        <field name="model">flower.shop</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="scientific_name"/>
                        <field name="season_start"/>
                        <field name="season_end"/>
                        <field name="watering_frequency"/>
                        <field name="watering_amount"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->


    <!-- Menu Item -->
    <menuitem id="menu_flower_shop_root" name="Flower Shop"/>
    <menuitem id="menu_flower_shop" name="Flowers" parent="menu_flower_shop_root" action="action_flower_shop"/>
</odoo>
